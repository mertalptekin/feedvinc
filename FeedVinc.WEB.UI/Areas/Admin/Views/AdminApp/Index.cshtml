
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using GridMvc.Html;
@using FeedVinc.WEB.UI.Areas.Admin.Models
@model List<AdminAppListVM>

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<script src="~/Scripts/gridmvc.min.js"></script>
<script src="~/Scripts/gridmvc.lang.tr.js"></script>


@Html.Grid(Model).Columns(columns =>
{

    columns.Add(x => x.AppNameTR)
    .Titled("Uygulama Adı (TR)")
    .Filterable(true)
    .Sortable(true)
    .ThenSortBy(d => d.ID)
    .SetWidth(120);

    columns.Add(x => x.AppNameEn)
    .Titled("Uygulama Adı (En)")
    .Filterable(true)
    .Sortable(true)
    .ThenSortBy(d => d.ID)
    .SetWidth(120);

    columns.Add(x => x.InformationTR)
   .Titled("Uygulama Hakkında (TR)")
   .Filterable(true)
   .Sortable(true)
   .ThenSortBy(d => d.ID)
   .SetWidth(120);

    columns.Add(x => x.InformationEN)
  .Titled("Uygulama Hakkında (TR)")
  .Filterable(true)
  .Sortable(true)
  .ThenSortBy(d => d.ID)
  .SetWidth(120);

    columns.Add(x => x.IsFree)
    .Titled("Ücreti")
    .Filterable(true)
    .Sortable(true)
    .RenderValueAs(d => d.IsFree == true ? "ücretsiz" : "ücretli")
    .SetWidth(120);

    columns.Add(x => x.SalesPrice)
   .Titled("Ücreti")
   .Filterable(true)
   .Sortable(true)
   .RenderValueAs(d => d.SalesPrice == null ? "belirtilmedi" : d.SalesPrice)
   .SetWidth(120);

    columns.Add()
        .Titled("Aktiflik Durumu")
        .Filterable(true)
        .Sortable(true)
        .SetWidth(120)
        .RenderValueAs(d => d.IsActive == true ? "Aktif" : "Pasif");


}).WithPaging(30).Sortable().Filterable().WithMultipleFilters().SetLanguage("tr")