
@{
    ViewBag.Title = "MissionAssigment";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using FeedVinc.WEB.UI.Areas.Admin.Models
@model List<MissionAssignmentVM>
@using GridMvc.Html;

<h2>Görevler</h2>


@section styles{
    <link href="~/Content/Gridmvc.css" rel="stylesheet" />
}


@Html.Grid(Model).Columns(columns =>
{
/* Adding not mapped column, that renders body, using inline Razor html helper */
columns.Add()
        .Titled("Görev Seçimi")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(d =>
            @<input type="radio" name="TaskType" value="" />);

    columns.Add(o => o.MissionContent)
          .Titled("Görev İçeriği")
          .SetWidth(100);


    columns.Add(o => o.MissionTypeName)
            .Titled("Görev Tipi")
            .SetWidth(100);

    columns.Add()
        .Titled("Detayını Göster")
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(d =>
        @<input type="button" class="form-control" name="TaskType" onchange="Detail(@d.MissionID)" value="Detayı Göster" />);


}).WithPaging(15).Sortable().Filterable().WithMultipleFilters().SetLanguage("tr")

<div class="container">
    <div class="row">
        <div id="mission_detail">

        </div>
    </div>
</div>


<script>

        function Detail(id) {

            alert(id);
            $.ajax({
                url: "/Admin/AdminMissionAssigment/Detail/" + id,
                type: "Get",
                success: function (response) {
                    $("#mission_detail").html(response);
                }
            })

        }

</script>


@section scripts{

    <script src="~/Scripts/gridmvc.js"></script>
    <script src="~/Scripts/gridmvc.lang.tr.js"></script>

    
}


