
@{
    ViewBag.Title = "AddNewMission";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using FeedVinc.WEB.UI.Areas.Admin.Models
@model MissionAssignmentVM


<div class="panel-title">
    <h3>Görev Girişi</h3>
</div>

<div class="panel-body">
    <div class="row">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }
        else if (ViewBag.IsSuccess == false)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        <div class="col-md-offset-3 col-md-6">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Görev Mesajı</label>
                    @Html.TextAreaFor(x => x.MissionContent, new { @class = "form-control", @placeholder="Görev Mesajı",@style="resize:none;height:200px;"})
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.MissionContent)</span>
                </div>
                
                <div class="form-group">
                    <label>Görev Algoritması</label>
                    @Html.EnumDropDownListFor(x => x.MissionAssigmentType,new { @class = "form-control" })
                    <span class="text-danger">@Html.ValidationMessageFor(x => x.MissionAssigmentType)</span>
                </div>

                <button type="submit" class="btn btn-default">Görev Girişi Yap</button>
                <a href="/Admin/AdminMissionAssigment/Index" type="button" class="btn btn-primary">Görev Ataması Ekranı</a>
            }
        </div>
    </div>
</div>


