@model IEnumerable<ProjectVM>


@foreach (var item in Model)
{
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb20 user-project" style="display:none;">
        <div class="box-white project-box pull-left">
            <div class="profile-img">
                <img style="max-height:120px; max-width:120px;" src="@item.ProjectProfileLogo" class="img-responsive">
            </div>
            <h2 class="profile">@item.ProjectName</h2>
            <div class="project-category">
                @item.ProjectCategoryName
            </div>
            <p class="profile">
                @item.ProjectSalesPitch
            </p>
            @if (item.OwnerID == ViewBag.CurrentUserID)
            {
                <div class="project-follow">
                    <a href="/project-profile/@item.ProjectSlugify/@item.ProjectCode" class="btn btn-default fs16">@SiteLanguage.Edit</a>
                </div>
            }
            else if (item.IsFollowed)
            {
                <div class="project-follow">
                    <button onclick="Follow(@ViewBag.CurrentUserID,@item.ProjectID,'project')" type="button" name="takip-et" class="btn btn-default fs16 project-follow_@item.ProjectID">@SiteLanguage.Followed</button>
                </div>
            }
            else if (!item.IsFollowed)
            {
                <div class="project-follow">
                    <button id="project-follow_@item.ProjectID" onclick="Follow(@ViewBag.CurrentUserID,@item.ProjectID,'project')" type="button" name="takip-et" class="btn btn-default fs16 project-follow_@item.ProjectID">@SiteLanguage.Follow</button>
                </div>
            }
           

        </div>
    </div>
}

	
