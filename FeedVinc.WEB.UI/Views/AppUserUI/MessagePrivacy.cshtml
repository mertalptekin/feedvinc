
@{
    ViewBag.Title = "MessagePrivacy";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@section styles{

    <link href="~/Content/Site/assets/css/pretty-input.css" rel="stylesheet" />

}

@Html.Partial("ProfilePartial/_userProfileSettingMenu", (object)ViewBag.MenuID)

<main>
    <div class="container">
        <div class="row">
            <form name="email_ayarlari" class="email_ayarlari" method="post" action="" novalidate="novalidate">
                <div class="form-small">
                    <label style="color:#db9e36; font-size:24px; text-indent:25px;">@SiteLanguage.MessagePrivacy</label>
                    <div class="radio radio-success">
                        <input type="radio" name="message_access" id="radio1" value="option1">
                        <a href="#" data-toggle="tooltip" data-placement="right" title="@SiteLanguage.PrivateMessageText">
                            <label for="radio1">
                                @SiteLanguage.Private_Access.ToUpper()
                            </label>
                        </a>
                    </div>
                    <div class="radio radio-success">
                        <input type="radio" name="message_access" id="radio2" value="option2">
                        <a href="#" data-toggle="tooltip" data-placement="right" title="@SiteLanguage.PublicMessageText">
                            <label for="radio2">
                                @SiteLanguage.Public_Access.ToUpper()
                            </label>
                        </a>
                    </div>

                    <div class="radio radio-success">
                        <input type="radio" name="message_access" id="radio3" value="option3">
                        <a href="#" data-toggle="tooltip" data-placement="right" title="@SiteLanguage.NoMessageText">
                            <label for="radio3">
                                @SiteLanguage.Message_Access_no_One.ToUpper()
                            </label>
                        </a>
                    </div>
                    <div class="form-col">
                        <button style="color:white;background-color:#419ba9;" type="submit" class="btn btn-block fs21 pull-right">@SiteLanguage.Post</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>


@section scripts{

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>


}

