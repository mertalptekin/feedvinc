
@using FeedVinc.WEB.UI.Models.ViewModels.Message
@model List<MessageDetailVM>

<div class="message-wrap" data-msg-id="1">
    <div class="user-dropdown-header">
        <a href="#" class="pull-left" onClick="userGoBack('message-wrap');">@SiteLanguage.Previous</a>
        <div class="user-details">
            <img src="~/Content/Site/assets/images/user.jpg">
            <a href="#" class="pull-right">Cihan Bir</a>
        </div>
    </div>
    <div class="user-dropdown-content">
        <div class="message-row">

            @foreach (var item in Model)
            {
                if (item.IsRecieved == true)
                {
                    <div class="msg-content recieved">
                        <p>@item.Message</p>
                        <span>@item.PrettyPostDate</span>
                    </div>
                }
                else
                {
                    <div class="msg-content sent">
                        <p>@item.Message</p>
                        <span>@item.PrettyPostDate</span>
                    </div>
                }
            }

        </div>
        <div class="user-input-wrap border-top">
            <input type="text" name="msg-to" class="msg-to-input">
            <a href="#" onClick="sendMsg(this);">@SiteLanguage.Post_Button</a>
        </div>
    </div>
</div>
