
@using FeedVinc.WEB.UI.Models.ViewModels.Notification
@model List<NotificationFollowVM>

<div id="user-dropdown-friends" class="jq-dropdown jq-dropdown-tip">
    <div class="jq-dropdown-panel">
        <div class="user-dropdown">
            <div class="user-dropdown-header">
                <h6>@SiteLanguage.LastestShareNotifications</h6>
                <a href="#takipciler-modal" class="pull-right">@SiteLanguage.Show_All</a>
            </div>
            <div class="user-dropdown-content">
                <ul class="user-dropdown-list" id="userFollowDropDown">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="dd-friend">
                                <a href="@item.Link"><img src="@item.ProfilePhoto"></a>
                                <div>
                                    <a href="@item.Link">@item.NotificationName <span style="color:#db9e36 !important;">@item.NotificationText</span> </a>
                                </div>
                            </div>
                        </li>
                    }
                   
                </ul>
            </div>
        </div>
    </div>
</div>
