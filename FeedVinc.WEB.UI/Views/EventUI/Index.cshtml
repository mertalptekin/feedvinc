

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@using FeedVinc.WEB.UI.Models.ViewModels.Event
@model List<EventVM>

@{
    Html.RenderAction("GetNavbar", "BaseUI");
}

<main>
    <section class="container">
        <div class="row">
            <!-- Sol içerik -->
            <section class="col-lg-8 col-md-8 col-sm-12 col-xs-12 mb30">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb20">
                        <h2 class="gold inline-block">@SiteLanguage.Events</h2>
                        <button class="btn btn-default fs16 btn-m-xs pull-right" data-remodal-target="activity-modal">@SiteLanguage.Add_Event</button>
                    </div>

                    @{
                        Html.RenderPartial("EventPartial/_addEvent", Model);
                    }

                </div>
            </section>
            <!-- Sol içerik bitti -->
            <!-- Sağ içerik -->
            <section class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="row">
                    <!-- Yatırım alanlar -->
                    <div class="col-lg-12 col-md-12 col-sm-9 col-xs-12 fl-sm-none">

                        @{
                            Html.RenderAction("GetInvestedProject", "BaseUI");
                        }
                    </div>

                    @{
                        Html.RenderAction("GetLastestLaunch", "BaseUI");
                    }

                </div>
            </section>
        </div>
    </section>
</main>


@Html.Partial("EventPartial/_addEvent")

@section scripts{

    <script src="~/Content/Site/assets/js/jquery-1.11.2.min.js"></script>
    <script src="~/Content/Site/assets/js/jquery.validate.min.js"></script>
    <script src="~/Content/Site/assets/js/jquery.validate.unobtrusive.min.js"></script>

}