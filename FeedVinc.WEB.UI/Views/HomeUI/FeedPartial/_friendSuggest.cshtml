
@model List<FriendSuggestionHomeVM>

<div class="col-lg-12 col-md-12 col-sm-9 col-xs-12 fl-sm-none">
    <!-- Arkadaş önerileri -->
    <div class="sidebar-box box-white">
        <h3>@SiteLanguage.Friend_Suggestions</h3>

        @foreach (var item in Model)
        {
            <div class="friend-suggestions">
                <div class="col">
                    <img src="@item.ProfilePhoto" class="img-responsive">
                    <a href="@item.UserProfileLink"><p>@item.UserName</p></a>
                    <a onclick="Follow(@ViewBag.CurrentUserID,@item.UserID,'user')" class="follow-user"><i class="fa fa-user-plus"></i></a>
                </div>
            </div>
        }
       
        <div class="text-center">
            <a href="#" class="show-all">@SiteLanguage.Show_All</a>
        </div>
    </div>
    <!-- Arkadaş önerileri bitti -->
</div>
