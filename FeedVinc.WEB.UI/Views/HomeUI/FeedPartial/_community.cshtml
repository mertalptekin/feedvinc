
@model List<CommunityHomeVM>

<div class="col-lg-12 col-md-12 col-sm-9 col-xs-12 fl-sm-none">
    <!-- Topluluklar -->
    <div class="col-lg-12 col-md-12 col-sm-9 col-xs-12 sidebar-box box-white">
        <h3>@SiteLanguage.Communities</h3>
        <div class="showcase-box">
            @foreach (var item in Model)
            {
                <div class="showcase-logo big">
                    <a href="@item.CommunityLink"><img src="@item.CommunityProfilePhoto" class="img-responsive"></a>
                </div>
            }
        
        </div>
        <div class="text-center">
            <a href="community/all" class="show-all">@SiteLanguage.Show_All</a>
        </div>
    </div>
    <!-- Topluluklar bitti -->
</div>
