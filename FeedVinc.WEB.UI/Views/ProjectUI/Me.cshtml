
@{
    ViewBag.Title = "Me";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

@model MyProjectVM

@{
    Html.RenderAction("GetNavbar", "BaseUI");
}

<main>
    <section class="container">
        <div class="row">
            <!-- Sol içerik -->
            <section class="col-lg-8 col-md-8 col-sm-12 col-xs-12 mb30">
                <div class="row">
                    @if (ViewBag.UserTypeID == 1)
                    {
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 mb20">
                            <a href="/project/add" class="btn btn-default btn-lg btn-m-xs">@SiteLanguage.NewProject</a>
                        </div>
                    }

                    @{Html.RenderPartial("ProjectPartial/_projectList",Model.Projects);}
                    
                </div>
            </section>
            <!-- Sol içerik bitti -->
            <!-- Sağ içerik -->
            <section class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="row">
                    @{
                        Html.RenderAction("GetInvestedProjects", "BaseUI");
                    }

                    @{
                        Html.RenderAction("GetLastestLaunch", "BaseUI");
                    }
                </div>
            </section>
            <!-- Sağ içerik -->
        </div>
    </section>
</main>

