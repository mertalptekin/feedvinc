
@{
    ViewBag.Title = "CommunityEdit";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


@using FeedVinc.WEB.UI.Models.ViewModels.Community
@model CommunityPostVM


@{
    Html.RenderPartial("CommunityPartial/_communityMenubar", Model.CommunityMenu);
}


<main>
    <section class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="create-project">@SiteLanguage.Community_Edit</h1>
                @if (ViewBag.IsSuccess == true)
                { <div class="alert alert-success" style="font-size:xx-large;">@ViewBag.Success</div> }
            </div>
            @using (Html.BeginForm("CommunityEdit", "CommunityUI", FormMethod.Post, new { @enctype = "multipart/form-data", @id = "frmProjectEdit", @novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=> x.CommunityID)

                <section class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-col">
                        <label for="community_name_edit">@SiteLanguage.Community_Name</label>
                        @Html.TextBoxFor(x => x.CommunityName, new { @class = "inputs" })
                        <div class="text-danger text-center">@Html.ValidationMessageFor(x => x.CommunityName)</div>
                    </div>
                    <div class="form-col">
                        <label for="community_purpose_edit">@SiteLanguage.Community_Objective</label>
                        @Html.TextAreaFor(x => x.CommunityObjective, new { @class = "textarea" })
                        <div class="text-danger text-center">@Html.ValidationMessageFor(x => x.CommunityObjective)</div>
                    </div>
                    <div class="form-col">
                        <label for="community_logo_edit">@SiteLanguage.Logo</label>
                        <div class="img-wrap">
                            <img src="@Model.CommunityProfilePhoto" class="community_logo_edit img-responsive">
                        </div>
                        @Html.TextBoxFor(x => x.CommunityPhoto, new { @type = "file", @class = "inputfile", @data_viewer_class = "community_logo_edit" })
                    </div>
                    <div class="form-col">
                        <div class="select">
                            @Html.DropDownListFor(x => x.CountryID, (IEnumerable<SelectListItem>)ViewData["Country"])
                        </div>
                    </div>
                    <div class="text-danger text-center">@Html.ValidationMessageFor(x => x.CountryID)</div>
                    <div class="form-col">
                        <div class="select">
                            @Html.DropDownListFor(x => x.CityID, (IEnumerable<SelectListItem>)ViewData["City"])
                        </div>
                    </div>
                    <div class="text-danger text-center">@Html.ValidationMessageFor(x => x.CityID)</div>
                    <div class="form-col">
                        <label for="community_url_edit">@SiteLanguage.WebSiteLink</label>
                        @Html.TextBoxFor(x => x.WebLink, new { @class = "inputs" })
                    </div>
                </section>
                <!-- Form sol kısım bitti -->
                <!-- Form sağ kısım -->
                <section class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="form-col community-about">
                        <label for="community_about_edit">@SiteLanguage.About</label>
                        @Html.TextAreaFor(x => x.About, new { @class = "textarea h100" })
                    </div>
                </section>
                <!-- Form sağ kısım bitti -->
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" name="gonder" class="btn btn-default pull-right mb30 fs21">@SiteLanguage.Post_Button</button>
                </div>
            }
    
        </div>
    </section>
</main>


@section scripts{

    <script src="~/Content/Site/assets/js/jquery-1.11.2.min.js"></script>
    <script src="~/Content/Site/assets/js/jquery.validate.min.js"></script>
    <script src="~/Content/Site/assets/js/jquery.validate.unobtrusive.min.js"></script>

}






